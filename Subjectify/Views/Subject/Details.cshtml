@model Domain.DomainModels.Subject

@{
ViewData["Title"] = "Subject Details";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Back Button with Icon at the Top Left -->
<div class="d-flex justify-content-start mb-3">
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<!-- Subject Name Section -->
<div class="text-center mb-4">
    <h1 class="display-4 text-dark">@Html.DisplayFor(model => model.Name)</h1>
</div>

<!-- Professors Section -->
@if (Model.Professors != null && Model.Professors.Any())
{
<div class="card mb-4">
    <div class="card-body">
        <h4 class="mb-4">Professors Teaching This Subject</h4>
        <div class="row">
            @foreach (var professor in Model.Professors)
            {
            <div class="col-md-4 mb-3">
                <div class="card p-3">
                    <h5 class="text-dark">@professor.FirstName @professor.LastName</h5>
                </div>
            </div>
            }
        </div>
    </div>
</div>
}
else
{
<p class="mt-3">No professors found for this subject.</p>
}

@if (User.IsInRole("Student"))
{
    <div class="mb-4">
        <a class="btn btn-success btn-lg" asp-action="Create" asp-controller="Reviews">Add Review</a>
    </div>
}

<!-- Average Review Score -->
@if (Model.Reviews != null && Model.Reviews.Any())
{
<div class="card mb-4">
    <div class="card-body">
        <h4 class="mb-4">Average Review Score</h4>
        <div class="text-center" id="averageReviewScore">
            <!-- Stars will be rendered here dynamically -->
        </div>
    </div>
</div>
}

<!-- Reviews Section -->
@if (Model.Reviews != null && Model.Reviews.Any())
{
<div class="card">
    <div class="card-body">
        <h4 class="mb-4">Reviews</h4>

        <!-- Loop over reviews and display -->
        @foreach (var review in Model.Reviews)
        {
        <div class="mb-4">
            <div class="d-flex align-items-center">
                @for (int i = 1; i <= 5; i++)
                {
                <i class="bi bi-star @((i <= review.Rating) ? "text-warning" : "text-muted")"></i>
                }
                <span class="ms-2">(@review.Rating/5)</span>
            </div>
            <p class="mt-2">
                @review.PositiveComment
            </p>
            <p class="mt-2">
                @review.NegativeComment
            </p>
        </div>
        }

        <!-- Pagination -->
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
}
else
{
<p class="mt-3">No reviews yet for this subject.</p>
}

@section Scripts {
<script>
    $(document).ready(function () {
        // Calculate and render the average review score dynamically
        var reviews = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Reviews));  // Serialize reviews into JavaScript array
        if (reviews.length > 0) {
            var totalScore = 0;
            reviews.forEach(function (review) {
                totalScore += review.Score;
            });

            var averageScore = totalScore / reviews.length;

            // Render the average score as stars
            var stars = '';
            for (var i = 1; i <= 5; i++) {
                if (i <= averageScore) {
                    stars += '<i class="bi bi-star text-warning"></i>';
                } else {
                    stars += '<i class="bi bi-star text-muted"></i>';
                }
            }

            $('#averageReviewScore').html(stars);  // Update the DOM with the stars
        }
    });
</script>
}
