@model Domain.DomainModels.Subject

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FacultyId" class="control-label"></label>
                <select asp-for="FacultyId" class="form-control" asp-items="ViewBag.FacultyList"></select>
                <span asp-validation-for="FacultyId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="selectedProfessorIds">Professors</label>
                <select id="selectedProfessorIds" name="selectedProfessorIds" class="form-control" multiple="multiple">
                    @foreach (var professor in ViewBag.ProfessorList)
                    {
                    <option value="@professor.Value" selected="@(professor.Selected)">
                        @professor.Text
                    </option>
                    }
                </select>
            </div>



            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
