                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PositiveComment" class="control-label"></label>
                <input asp-for="PositiveComment" class="form-control" />
                <span asp-validation-for="PositiveComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NegativeComment" class="control-label"></label>
                <input asp-for="NegativeComment" class="form-control" />
